{
  "name": "web-message-board",
  "version": "1.0.0",
  "description": "在线留言板 - Cloudflare Workers",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create message-board-db",
    "d1:init": "wrangler d1 execute message-board-db --remote --file=./schema.sql",
    "d1:init:local": "wrangler d1 execute message-board-db --local --file=./schema.sql",
    "d1:query": "wrangler d1 execute message-board-db --remote --command",
    "d1:query:local": "wrangler d1 execute message-board-db --local --command"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "message-board"
  ],
  "author": "Tim",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^4.50.0"
  }
}
